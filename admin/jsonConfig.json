{
    "i18n": true,
    "type": "tabs",
    "tabsStyle": {
        "width": "calc(100% - 100px)"
    },
    "items": {
        "_tab_Start": {
            "type": "panel",
            "label": "Main Settings",
            "items": {
                "header_Start": {
                    "type": "header",
                    "text": "Welcome to X-Sense Adapter",
                    "size": 2
                },
                "_textStart": {
                    "type": "staticText",
                    "text": "Adapter work in hybrid mode, it work with X-Sense Bridge with MQTT client but the login request is sent to the X-Sense Cloud.",
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4,
                    "style": {
                        "fontSize": 16,
                        "marginTop": 0
                    }
                },
                "_documentationLinkGerman": {
                    "type": "staticLink",
                    "label": "ðŸ‡©ðŸ‡ª Deutsche Dokumentation",
                    "button": true,
                    "href": "https://github.com/arteck/ioBroker.xsense/blob/main/README_de.md",
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4,
                    "style": {
                        "fontSize": 16,
                        "marginTop": 0
                    }
                },
                "_documentationLinkEnglish": {
                    "type": "staticLink",
                    "label": "ðŸ‡¬ðŸ‡§ English Documentation",
                    "button": true,
                    "href": "https://github.com/arteck/ioBroker.xsense/blob/main/README.md",
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4,
                    "style": {
                        "fontSize": 16,
                        "marginTop": 0
                    }
                },

                "header2": {
                    "type": "header",
                    "text": " ",
                    "size": 2
                },

                "spacer01": {
                  "type": "staticText",
                  "text": "",
                  "xs": 12,
                  "sm": 12,
                  "md": 6,
                  "lg": 4,
                  "xl": 4,
                  "newLine": true
                },
                "userEmail": {
                    "newLine": true,
                    "type": "text",
                    "label": "User email",
                    "help": "login email for X-Sense Cloud",
                    "hidden": "data.mqttDoNotVerifyUserPw",
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                },
                "userPassword": {
                    "type": "password",
                    "label": "Password",
                    "help": "Password for X-Sense Cloud",
                    "hidden": "data.mqttDoNotVerifyUserPw",
                    "repeat": true,
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                },
                "polltime": {
                    "newLine": true,
                    "type": "number",
                    "label": "Polling interval",
                    "help": "Polling interval in seconds",
                    "min": 10,
                    "max": 3600,
                    "step": 1,
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                },
                "pythonVersion": {
                    "newLine": true,
                    "type": "select",
                    "label": "Python Version",
                    "help": "Python Version to use for the adapter",
                    "options": [

                        {
                            "label": "3.12.9",
                            "value": "3.12.9"
                        },
                        {
                            "label": "3.11.8",
                            "value": "3.11.8"
                        },
                        {
                            "label": "3.10.10",
                            "value": "3.10.10"
                        }
                    ],
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                },
                "pythonTimeout": {
                    "type": "number",
                    "label": "timeout for Python script",
                    "help": "maybe conflict with polling interval. do not set below 20 seconds or above the set polling interval.",
                    "min": 20,
                    "max": 90,
                    "step": 1,
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                },
                "isWindowsSystem": {
                    "type": "checkbox",
                    "label": "is adapter running under Windows?",
                    "xs": 12,
                    "sm": 12,
                    "md": 8,
                    "lg": 4,
                    "xl": 4
                },
                "spacer02": {
                  "type": "staticText",
                  "text": "",
                  "xs": 12,
                  "sm": 12,
                  "md": 6,
                  "lg": 4,
                  "xl": 4,
                  "newLine": true
                },
                "useMqttServer": {
                  "type": "checkbox",
                  "label": "Use MQTT. You need XSense APP Version >= 1.34",
                  "newLine": true,
                  "xs": 12,
                  "sm": 12,
                  "md": 6,
                  "lg": 4,
                  "xl": 4
                },
                "spacer03": {
                  "type": "staticText",
                  "text": "MQTT Server Configuration",
                  "xs": 12,
                  "sm": 12,
                  "md": 6,
                  "lg": 4,
                  "xl": 4,
                  "newLine": true,
                  "hidden": "data.useMqttServer == false"
                },
                "connectionType": {
                  "label": "Select connection",
                  "xs": 12,
                  "sm": 12,
                  "md": 6,
                  "lg": 4,
                  "xl": 4,
                  "type": "select",
                  "options": [
                    {
                      "label": "External MQTT-Server",
                      "value": "exmqtt"
                    },
                    {
                      "label": "Internal MQTT-Server",
                      "value": "intmqtt"
                    }
                  ],
                  "newLine": true,
                  "hidden": "data.useMqttServer == false"
                },
                "baseTopic": {
                  "type": "text",
                  "label": "Base MQTT topic",
                  "xs": 12,
                  "sm": 12,
                  "md": 6,
                  "lg": 4,
                  "xl": 4,
                  "default": "homeassistant/binary_sensor/#",
                  "disabled": "true",
                  "hidden": "data.connectionType == 'intmqtt' || data.useMqttServer == false"
                },
                "spacer04": {
                  "type": "staticText",
                  "text": "Configure your connection",
                  "xs": 12,
                  "sm": 12,
                  "md": 6,
                  "lg": 4,
                  "xl": 4,
                  "newLine": true,
                  "hidden": "data.useMqttServer == false"
                },
                "externalMqttServerIP": {
                  "type": "text",
                  "label": "External MQTT-Server IP-Address",
                  "newLine": true,
                  "xs": 12,
                  "sm": 12,
                  "md": 6,
                  "lg": 4,
                  "xl": 4,
                  "hidden": "data.connectionType == 'intmqtt' || data.useMqttServer == false"
                },
                "externalMqttServerPort": {
                  "type": "number",
                  "label": "External MQTT-Server Port",
                  "newLine": false,
                  "xs": 12,
                  "sm": 12,
                  "md": 6,
                  "lg": 4,
                  "xl": 4,
                  "hidden": "data.connectionType == 'intmqtt' || data.useMqttServer == false"
                },
                "externalMqttServerCredentials": {
                  "type": "checkbox",
                  "label": "Use MQTT Credentials",
                  "newLine": true,
                  "xs": 12,
                  "sm": 12,
                  "md": 6,
                  "lg": 4,
                  "xl": 4,
                  "hidden": "data.connectionType == 'intmqtt' || data.useMqttServer == false"
                },
                "externalMqttServerUsername": {
                  "type": "text",
                  "label": "MQTT Username",
                  "newLine": true,
                  "xs": 12,
                  "sm": 12,
                  "md": 6,
                  "lg": 4,
                  "xl": 4,
                  "hidden": "data.externalMqttServerCredentials == false || data.connectionType == 'intmqtt' || data.useMqttServer == false"
                },
                "externalMqttServerPassword": {
                  "type": "password",
                  "label": "MQTT Password",
                  "newLine": false,
                  "xs": 12,
                  "sm": 12,
                  "md": 6,
                  "lg": 4,
                  "xl": 4,
                  "visible": true,
                  "hidden": "data.externalMqttServerCredentials == false || data.connectionType == 'intmqtt' || data.useMqttServer == false"
                },
                "mqttServerIPBind": {
                  "type": "ip",
                  "label": "MQTT-Server IP-Address bind",
                  "listenOnAllPorts": true,
                  "xs": 12,
                  "sm": 12,
                  "md": 6,
                  "lg": 4,
                  "xl": 4,
                  "newLine": true,
                  "hidden": "data.connectionType == 'exmqtt' || data.useMqttServer == false"
                },
                "mqttServerPort": {
                  "type": "number",
                  "label": "MQTT-Server Port",
                  "xs": 12,
                  "sm": 12,
                  "md": 6,
                  "lg": 4,
                  "xl": 4,
                  "newLine": false,
                  "hidden": "data.connectionType == 'exmqtt' || data.useMqttServer == false"
                }
            }
        }
    }
}
