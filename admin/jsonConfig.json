                    "repeat": true,
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                },
                "polltime": {
                    "newLine": true,
                    "type": "number",
                    "label": "Polling interval",
