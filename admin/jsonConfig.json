{
    "i18n": true,
    "type": "tabs",
    "tabsStyle": {
        "width": "calc(100% - 100px)"
    },
    "items": {
        "_tab_Start": {
            "type": "panel",
            "label": "Main Settings",
            "items": {
                "header_Start": {
                    "type": "header",
                    "text": "Welcome to X-Sense Adapter",
                    "size": 2
                },
                "_textStart": {
                    "type": "staticText",
                    "text": "Adapter work in hybrid mode, it work with X-Sense Bridge with MQTT client but the login request is sent to the X-Sense Cloud. You can use this adapter to control your X-Sense Bridge and Sensors.",
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4,
                    "style": {
                        "fontSize": 16,
                        "marginTop": 0
                    }
                },
                "userEmail": {
                    "newLine": true,
                    "type": "text",
                    "label": "User email",
                    "help": "login email for X-Sense Cloud",
                    "hidden": "data.mqttDoNotVerifyUserPw",
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                },
                "userPassword": {
                    "type": "password",
                    "label": "Password",
                    "help": "Password for X-Sense Cloud",
                    "hidden": "data.mqttDoNotVerifyUserPw",
                    "repeat": true,
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                },
                "polltime": {
                    "newLine": true,
                    "type": "number",
                    "label": "Polling interval",
                    "help": "Polling interval in seconds",
                    "def": 60,
                    "min": 60,
                    "max": 3600,
                    "step": 1,
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                },
                "pythonVersion": {
                    "newLine": true,
                    "type": "select",
                    "label": "Python Version",
                    "help": "Python Version to use for the adapter",
                    "def": "3.13",
                    "options": [
                        {
                            "value": "3.13",
                            "text": "3.13"
                        },
                        {
                            "value": "3.12",
                            "text": "3.12"
                        },
                        {
                            "value": "3.11",
                            "text": "3.11"
                        }
                    ],
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                }
            }
        }
    }
}
